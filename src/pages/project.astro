---
import Footer from "src/components/footer.astro";
import Header from "src/components/header.astro";
import ProjectCard from "src/components/project-card.astro";
import ThemeToggle from "src/components/theme-toggle";
import { projects } from "src/data/projects";
import Layout from "src/layouts/Layout.astro";
---

<Layout title="Project | limchinfeng">
	<ThemeToggle client:load />
	<div class="w-wrapper">
		<Header />
		<div class="flex sm:flex-row flex-col z-0 mx-5">
        <!-- Project -->
      <div class="leading-relaxed space-y-3 text-justify text-light-text dark:text-dark-text">
        <h1 class="text-title text-xl font-bold">Project</h1>
        <p>These are some of my latest work. Check out the cool projects I've been working on recently!</p>
        <div class="pt-3 space-y-5">
          {projects.map((project) => (
            <ProjectCard {...project}/>
          ))}
        </div>
      </div>
		</div>
		<Footer />
  </div>
</Layout>
