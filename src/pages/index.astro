---
import ThemeToggle from '@/components/theme-toggle.tsx';
import Header from '@/components/header.astro';
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<ThemeToggle client:load />
	<div class=" w-wrapper min-h-screen">
		<Header />
		<div class="flex sm:flex-row flex-col z-0 gap-8 mx-5">
			<div class="flex flex-col text-light-text dark:text-dark-text w-full sm:w-1/4 sm:sticky sm:h-fit sm:top-10">
				<img 
					src="/image/profile-picture.jpg"
					alt="supershuaifeng"
					class="w-20 h-auto rounded-full mb-5"
					draggable="false"
				/>
				<p>Hi, I'm <span class="text-title text-2xl font-bold leading-relaxed">Chin Feng</span></p>
				<p class="text-sm">or Supershuaifeng</p>
				<p class="mt-2">A Software Engineering Student @ USM</p>
				<ul class="mt-6 space-y-2">
					<li>
						<a href="https://www.linkedin.com/in/lim-chin-feng/" target="_blank">
							<span class=" hover:text-light-hover dark:hover:text-dark-hover transition"><i class="fa-brands fa-linkedin fa-lg mr-2"></i>Lim Chin Feng</i></span>
						</a>
					</li>
					<li>
						<a href="https://github.com/limchinfeng" target="_blank">
							<span class="hover:text-light-hover dark:hover:text-dark-hover transition group"><i class="fa-brands fa-github fa-lg mr-2"></i></i>limchinfeng</span>
						</a>
					</li>
					<li>
						<a href="https://www.instagram.com/limchinfeng/" target="_blank">
							<span class="hover:text-light-hover dark:hover:text-dark-hover transition group"><i class="fa-brands fa-instagram fa-lg mr-2"></i></i>limchinfeng</span>
						</a>
					</li>
				</ul>
			</div>
			<div class="border border-light-text dark:border-dark-text flex-1 min-h-[100rem]">

			</div>
						
		</div>
  </div>
</Layout>
