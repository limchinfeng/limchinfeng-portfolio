---
import Layout from '@/layouts/Layout.astro';
import ThemeToggle from '@/components/theme-toggle.tsx';
import Header from '@/components/header.astro';
import Footer from '@components/footer.astro';

import {CVProjects, CVReleventExperiences, CVWorkingExperiences} from '@data/cv'
import WorkingExperience from '@components/cv/working-experience.astro';
import ExperienceProject from '@components/cv/experience-project.astro';
---

<Layout title="CV | limchinfeng">
	<ThemeToggle client:load />
	<div class="w-wrapper min-h-screen flex flex-col">
		<Header />
		<div class="flex flex-1 z-0 w-full">
      <!-- CV -->
      <div class="leading-relaxed space-y-3 text-justify text-light-text dark:text-dark-text mx-5 w-full">
        <div class="flex flex-row justify-between items-center pb-2">
          <h1 class="text-title text-xl font-bold">CV</h1>
          <!-- <a href="/file/limchinfeng_cv.pdf" target="_blank" class="text-dark-text py-2 px-6 bg-title dark:hover:bg-dark-hover dark:hover:text-dark-pale hover:bg-light-hover transition rounded-lg">Download<i class="fa-solid fa-file-arrow-down ml-2"></i></a> -->
        </div>
        <div class="relative z-10">
          <!-- Background Colour -->
          <div class="absolute bg-title h-28 md:h-[7.2rem] w-full top-0 z-0">
            <div class="hidden pl-52 md:flex flex-col justify-end h-full pb-2 text-white">
              <h1 class="text-4xl font-bold leading-relaxed">Lim Chin Feng</h1>
              <p>Software Engineering Student @ USM</p>
            </div>
          </div>

          <!-- Personal Information -->
          <div class="relative z-10 pt-4 md:px-6 md:pt-10 flex md:flex-row flex-col md:items-end items-center">
            <img src="/image/profile-picture.jpg" alt="limchinfeng" draggable="false" class="bg-light-background dark:bg-dark-background p-1 w-36 object-contain aspect-square rounded-full" />
            <div class="md:hidden flex flex-col text-center">
              <h1 class="text-2xl font-bold leading-relaxed">Lim Chin Feng</h1>
              <p>Software Engineering Student @ USM</p>
            </div>
            <div class="md:pl-5 flex-1 pt-4">
              <ul class="flex md:flex-row flex-col md:gap-10 gap-2">
                <li>
                  <a href="https://github.com/limchinfeng" target="_blank">
                    <span class="hover:text-light-hover dark:hover:text-dark-hover transition underline"><i class="fa-brands fa-github fa-lg mr-2"></i></i>github.com/limchinfeng</span>
                  </a>
                </li>
                <li>
                  <a href="https://www.linkedin.com/in/lim-chin-feng/" target="_blank">
                    <span class=" hover:text-light-hover dark:hover:text-dark-hover transition underline"><i class="fa-brands fa-linkedin fa-lg mr-2"></i>linkedin.com/in/lim-chin-feng</i></span>
                  </a>
                </li>
              </ul>
            </div>
          </div>

          <!-- Working Experiences -->
          <div class="my-8">
            <h1 class="text-xl font-bold pt-4 text-title"><i class="fa-regular fa-font-awesome mr-2"></i>Working Experiences</h1>
            {CVWorkingExperiences.map((experience) => (
              <WorkingExperience {...experience} />
            ))}
          </div>

          <div class="w-4/5 border border-light-text/40 dark:border-dark-text/50 mx-auto" />

          <!-- Relevent Experiences -->
          <div class="py-5">
            <h1 class="text-xl font-bold pt-4 text-title"><i class="fa-regular fa-font-awesome mr-2"></i>Experiences</h1>
            {CVReleventExperiences.map((experience) => (
              <ExperienceProject {...experience} />
            ))}
            </div>
          </div>

          <div class="w-4/5 border border-light-text/40 dark:border-dark-text/50 mx-auto" />

          <!-- Projects -->
          <div class="pt-4">
            <h1 class="text-xl font-bold pt-4 text-title"><i class="fa-regular fa-font-awesome mr-2"></i>Projects</h1>
            {CVProjects.map((experience) => (
              <ExperienceProject {...experience} />
            ))}
            </div>
          </div>
        </div>
      </div>
		</div>
    <Footer />
  </div>
</Layout>
